<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:columnCount="1"
    android:rowCount="5"
    tools:context="com.example.vinicius.tcptest.Client">

    <EditText android:id="@+id/server_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/server_ip" />
    <EditText android:id="@+id/server_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/server_port" />
    <EditText android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessageV2" />
    <TextView
        android:id="@+id/response_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</GridLayout>
